{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Dispensing using arbitrary pump",
    "subtopic": "/dispense",
    "description": "JSON Schema for a IPC weighing using a scale",
    "type": "object",
    "properties": {
        "product_state": {
            "type": "string",
            "enum": ["empty", "half-full", "full"],
            "description": "State of the product when being weighed"
        },
        "filling_speed": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "volume": {
            "type": "number",
            "exclusiveMinimum": 0
        }

    },
    "required": ["product_state"]
}