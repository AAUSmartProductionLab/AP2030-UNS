        <Action ID="MoveShuttleToPosition">
            <input_port name="xbot_id" type="int"/>
            <input_port name="goal" type="Position2D"/>
        </Action>
        <Condition ID="PMCConditionNode">
            <input_port name="expected_value" type="std::string">Value to compare against</input_port>
