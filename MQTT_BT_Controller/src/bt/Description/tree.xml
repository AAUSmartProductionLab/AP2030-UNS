<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <Sleep msec="2000"/>
      <MoveShuttleToPosition name="MoveShuttleToLoading"
                             xbot_id="1"
                             goal="120.0;120.0"/>
      <Sleep msec="2000"/>
      <Fallback>
        <MoveShuttleToPosition name="MoveShuttleToLoading"
                               xbot_id="1"
                               goal="120.0;120.0"/>
        <MoveShuttleToPosition name="MoveShuttleToFilling"
                               xbot_id="1"
                               goal="240.0;240.0"/>
      </Fallback>
      <MoveShuttleToPosition name="MoveShuttleToFilling"
                             xbot_id="1"
                             goal="240.0;240.0"/>
      <MoveShuttleToPosition name="MoveShuttleToUnloading"
                             xbot_id="1"
                             goal="360.0;360.0"/>
      <OmronArclRequest command="dock"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="MoveShuttleToPosition">
      <input_port name="xbot_id"
                  type="int"/>
      <input_port name="goal"
                  type="Position2D"/>
    </Action>
    <Action ID="OmronArclRequest">
      <input_port name="command"
                  type="BT::AnyTypeAllowed"/>
    </Action>
  </TreeNodesModel>

</root>
