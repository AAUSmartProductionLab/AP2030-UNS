{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Move to Position Request",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://aausmartproductionlab.github.io/AP2030-UNS/MQTTSchemas/command.schema.json"
        },
        {
            "type": "object",
            "properties": {
                "X": {
                    "type": "number",
                    "description": "Target X position in mm"
                },
                "Y": {
                    "type": "number",
                    "description": "Target Y position in mm"
                },
                "Velocity": {
                    "type": "number",
                    "description": "Movement velocity in mm/s"
                }
            },
            "required": ["X", "Y"]
        }
    ]
}