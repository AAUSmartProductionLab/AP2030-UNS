{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Command Schema",
    "description": "An arbitrary command",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://aausmartproductionlab.github.io/AP2030-UNS/schemas/data.schema.json"
        },
        {
            "type": "object",
            "properties": {
                "Uuid": {
                    "type": "string"
                }
            },
            "State": {
                    "type": "string",
                    "description": "The state of the command being executed",
                    "enum": ["RUNNING","SUCCESS","FAILURE"]
                },
        "required": ["Uuid", "State"]
        }
    ]
}