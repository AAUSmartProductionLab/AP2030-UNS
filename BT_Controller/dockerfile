FROM ubuntu:jammy

# Avoid prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install essential build tools and dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    make \
    git \
    gcc \
    libssl-dev \
    pkg-config \
    uuid-dev \
    libyaml-cpp-dev \
    libfmt-dev \
    libzmq3-dev \
    libsqlite3-dev \
    libgtest-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Clone AP2030UNS repo and build BT_Controller
WORKDIR /src
RUN git clone https://github.com/AAUSmartProductionLab/AP2030-UNS.git
WORKDIR /src/AP2030-UNS
RUN git submodule update --init --recursive

WORKDIR /src/AP2030-UNS/BT_Controller
RUN mkdir -p build && cd build && \
    cmake .. && \
    make -j$(nproc)

WORKDIR /src/AP2030-UNS/BT_Controller/build
CMD ["./bt_controller"]